{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",   
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"   
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },{
      "src": "/_next/(.*)", 
      "dest": "/_next/$1"
    },
    {
      "src": "/static/(.*)",  
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",   
      "dest": "/client/build/index.html"
    },
    {
      "src": "/reset-password/confirm",   
      "dest": "/server.js"
    },
    {
      "src": "/reset-password/:token",   
      "dest": "/client/build/index.html"
    }
  ]
}
